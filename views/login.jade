extends layout
block content
  include ./includes/header.jade
  include ./includes/verifyModal.jade
  .container-fluid.bg-navy-gradient
    if (message.length > 0)
      .msg-container
        .alert.alert-danger #{message}
    .form-container
      h1 #[span(class='fa fa-sign-in')] Secure Login
      form(action='/login', method='post')
        .form-group
          input.form-control.bg-navy-gradient(type='text', name='email', placeholder='Email')
        .form-group
          input.form-control.bg-navy-gradient(type='password', name='password', placeholder='Password')
        button.btn.btn-custom(type='submit') Login
        br
        p Need an account? #[a(href='/signup') Signup]
        
    
  include ./includes/footer.jade
