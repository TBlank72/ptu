#loginModal.modal.fade(role='dialog')
  .modal-dialog.modal-lg
    // Modal content
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal') &times;  
        h4(style='color:info;') PT University
        h4(style='color:info;')
          span.glyphicon.glyphicon-lock
          |  Secure Login
      .modal-body
        form(role='form')
          .form-group
            label(for='useremail')
              span.glyphicon.glyphicon-user
              |  Email
            input#useremail.form-control(type='text', placeholder='Enter email')
          .form-group
            label(for='psw')
              span.glyphicon.glyphicon-eye-open
              |  Password
            input#psw.form-control(type='text', placeholder='Enter password')
          .checkbox
            label
              input(type='checkbox', value='', checked='')
              | Remember me
          button.btn.btn-default.btn-success.btn-block(type='submit')
            span.glyphicon.glyphicon-off
            |  Login
      .modal-footer
        button.btn.btn-default.btn-default.pull-left(type='submit', data-dismiss='modal')
          span.glyphicon.glyphicon-remove
          |  Cancel  
        p
          | Not a member? 
          a(href='#') Sign Up 
        p
          | Forgot 
          a(href='#') Password?
