extends layout

block content
  include ./includes/header.jade
  .container-fluid.bg-navy-gradient(ng-controller="dashboardCtrl")
    .dashboard-container
      .row
        .col-sm-2
          h3 #[span(class='fa fa-user')] My Dashboard
          ul.nav.nav-pills.nav-stacked.nav-stacked-extended
            li
              a(href='#/contact-info', target='_self') Contact Info
            li
              a(href='#/password', target='_self') Password
            li
              a(href='#/my-certs', target='_self') My Certifications
        .col-sm-8
          if (message.length > 0)
            .msg-container
              .alert.alert-danger #{message}
          div(ng-view)
        .col-sm-2
          p some other links or something
            
  include ./includes/footer.jade
  
